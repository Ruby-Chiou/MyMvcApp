@model IEnumerable<MyMvcApp.Models.Product>

<div class="text-center">
    <h1 class="display-4">Welcome tbody MyMvcApp 12130906</h1>
    <h4>這些資料是從 Postgres Database 資料庫來的</h4>

    <table border="1" cellspacing="0" cellpadding="5" style="margin: 0 auto; text-align: center;">
        <thead>
            <tr>
                <th>產品名稱</th>
                <th>描述</th>
                <th>價格</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>
